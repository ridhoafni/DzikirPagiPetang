<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.user.dzikirpagipetang.AnnaasActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@drawable/bacaanbismilah"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-5dp"
                    android:id="@+id/an_naas">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:src="@drawable/annas1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@drawable/annas2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@drawable/annas3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@drawable/annas4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@drawable/annas5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@drawable/annas6"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
